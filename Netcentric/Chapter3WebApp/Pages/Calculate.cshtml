@page
@model Chapter3WebApp.Pages.CalculateModel
@{
    ViewData["Title"] = "Calculate Sum";
}

<h1>Calculate Sum</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.A" class="form-label"></label>
        <input asp-for="Input.A" class="form-control" />
        <span asp-validation-for="Input.A" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.B" class="form-label"></label>
        <input asp-for="Input.B" class="form-control" />
        <span asp-validation-for="Input.B" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model.Result.HasValue)
{
    <div class="alert alert-success mt-3">
        Sum = @Model.Result
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
