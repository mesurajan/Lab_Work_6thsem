@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - User Management</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        /* Watermark */
        body::after {
            content: "Surajan Shrestha";
            position: fixed;
            bottom: 50%;
            right: 5%;
            font-size: 5rem;
            color: rgba(0,0,0,0.05);
            transform: rotate(-45deg);
            pointer-events: none;
            z-index: 0;
        }

        /* Gradient Buttons */
        .btn-gradient {
            background: linear-gradient(45deg, #11998e, #38ef7d);
            color: white;
            border: none;
        }

            .btn-gradient:hover {
                opacity: 0.9;
            }

        /* Card styling */
        .card {
            border-radius: 1rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        /* Page Subtitle */
        .page-subtitle {
            font-size: 1.1rem;
            color: #ffff;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="text-center">
            <a class="navbar-brand fw-bold display-6 text-white"
               asp-controller="Users" asp-action="Index"
               style="text-shadow: 1px 1px 2px rgba(0,0,0,0.3); font-size: 45px;">
                User Management System
            </a>

            <p class="navbar-brand text-white  mt-1 mb-0 px-5" style="font-size: 1rem; text-shadow: 0 1px 2px rgba(0,0,0,0.2);">
                Easily manage users, create new accounts, and keep your system organized.
            </p>
        </div>

        

    </nav>

    <!-- Main content -->
    <div class="container my-5 position-relative">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-primary text-white text-center py-3 mt-auto">
        © @DateTime.Now.Year - User Management System by Surajan Shrestha
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
