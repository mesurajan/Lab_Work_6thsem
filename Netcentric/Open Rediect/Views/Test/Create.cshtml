@{
    ViewData["Title"] = "Open Redirect Demo - Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #f3f8ff, #e0f7fa);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .success-container {
            text-align: center;
            margin-top: 100px;
            padding: 60px 20px;
            background-color: white;
            border-radius: 25px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .success-icon {
            font-size: 80px;
            color: #198754;
            margin-bottom: 20px;
        }

        h1 {
            color: #198754;
            font-weight: 700;
            margin-bottom: 15px;
        }

        p {
            color: #555;
            font-size: 1.1rem;
        }

        .btn-back {
            margin-top: 25px;
            background-color: #0d6efd;
            color: white;
            border-radius: 10px;
            padding: 10px 25px;
            text-decoration: none;
        }

            .btn-back:hover {
                background-color: #0b5ed7;
                color: white;
            }

        .footer {
            text-align: center;
            padding: 20px;
            margin-top: 80px;
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
            color: #555;
        }
    </style>
</head>

<body>
    <div class="success-container">
        <div class="success-icon">✅</div>
        <h1>Redirect Successful!</h1>
        <p>
            You have been safely redirected to this page within the same web application.
            This confirms that your redirect operation is secure and does not expose any vulnerability.
        </p>

        <div class="mt-4">
            <h5>🔒 Why is this important?</h5>
            <p class="text-muted">
                Open redirects can be exploited by attackers to lead users to phishing or malware sites.
                Implementing URL validation (like <code>Url.IsLocalUrl()</code>) ensures that users stay within trusted pages.
            </p>
        </div>

        <a href="/Test/Index" class="btn-back">← Back to Home</a>
    </div>

    <footer class="footer">
        <p>&copy; @DateTime.Now.Year | ASP.NET Core MVC Security Lab | Created by Surajan Shrestha</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
